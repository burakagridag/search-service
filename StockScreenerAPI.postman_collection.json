              "body": "{\n  \"industries\": [\"Auto - Manufacturers\", \"Banks - Regional\", \"Consumer Electronics\", \"Software - Infrastructure\"],\n  \"countries\": [\"DE\", \"TR\", \"US\"],\n  \"sectors\": [\"Basic Materials\", \"Technology\", \"Financial Services\"],\n  \"exchanges\": [\"NASDAQ Global Select\", \"New York Stock Exchange\"],\n  \"currencies\": [\"EUR\", \"TRY\", \"USD\"],\n  \"rangeOptions\": {\n    \"marketCap\": {\"min\": 1000000, \"max\": 3000000000000},\n    \"price\": {\"min\": 0.01, \"max\": 500.00},\n    \"beta\": {\"min\": -2.5, \"max\": 5.0}\n  }\n}"

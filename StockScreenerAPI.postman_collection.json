            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/search/stocks/filter-options",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "search", "stocks", "filter-options"]
            },
            "description": "Returns all available filter options including industries, countries, sectors, exchanges, currencies and range values for market cap, price, and beta."
          },
          "response": [
            {
              "name": "Success Response",
              "originalRequest": {
                "method": "GET",
                "header": [],
